<%- include header %>
<% posts.forEach(function (post, index) { %>
  <p><h2>
  <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a>
  <a class = "article" href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
  <p class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> 
    日期：<%= post.time.minute %>
  </p>
  <p class = "info">
    标签：<% post.tags.forEach(function(tag,index){ %>
    <a href = "/tags/<%= tag %>" class = "tag"><%= tag%></a>
    <% }) %>
  </p>
  <p class = "info">
  阅读：<%= post.pv%>
  评论：<%= post.comments.length%>
  转载：<% if(post.reprint.reprintto) { %>
  <%= post.reprint.reprintto.length%>
  <% } else { %>
  <%= 0%>
  <% } %>
  </p>
  <p><%- post.post %></p>
<% }) %>
<%- include paging %>
<%- include footer %>
