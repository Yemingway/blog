<%- include header %>
<header class="intro-header" style="background-image: url('img/about-bg.jpg')">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
				<div class="post-heading">
					<h1><%= post.title%></h1>
				    <h2 class="subheading"><%= post.subtitle%></h2>
					<span class="meta">Posted on <%= post.time.day%></span>
				</div>
			</div>
		</div>
	</div>
</header>
<!-- Post Content -->
<article>
	<div class="container">
		<div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <!-- article content -->
                <div><%= post.post%></div>
			</div>
		</div>
	</div>
</article>

<hr>
<%- include footer %>