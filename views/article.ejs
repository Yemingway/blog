<%- include header %>
<% if(user && post) { %>
<% var flag = 1%>
<p>
<% if(user.name == post.name) { %>
<span><a class="edit" href = "/edit/<%= post.name %>/<%= post.time.day%>/<%= post.title%>">编辑</a></span>
<span><a class = "edit" href = "/remove/<%= post.name %>/<%= post.time.day%>/<%= post.title%>">删除</a></span>
<% } else { %>
<% if(post.reprint && post.reprint.reprintto && post.reprint.reprintto.length > 0) { %>
<% post.reprint.reprintto.forEach(function(printtoinfo,index){ %>
<% if(printtoinfo.name == user.name) { flag = 1 } else { flag = 0 }}) %>
<% } else { %>
<% flag = 0 %>
<% }} %>
<% if (flag == 0) { %>
<span><a class = "edit" href = "/reprint/<%= post.name %>/<%= post.time.day%>/<%= post.title%>">转载</a></span>
<% } %>
<% } %>
</p>
<p class="info">
  作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
  日期：<%= post.time.minute %>
</p>
<p>
标签： <% post.tags.forEach(function(tag,index) { %>
<%= tag%>
<% }) %>
</p>
<p class = "info">
  阅读：<%= post.pv%>
  评论：<%= post.comments.length%>
  转载：<% if(post.reprint.reprintto) { %>
  <%= post.reprint.reprintto.length%>
  <% } else { %>
  0 <% } %>
 </p>
<p><%- post.post %></p>
<%- include comments %>

<%- include footer %>